



.banner {
    text-align: center;
    padding-top: 65px;
    color: #fff;
}

.banner-text {
    max-width: 550px;
}

.banner h1 {
    font-size: 48px;
    font-weight: 400;
    font-family: 'Playfair Display', serif;
}

.banner ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding-left: 0;
}

.banner ul li {
    list-style: none;
    margin: 20px 20px 0;
    position: relative;
    font-weight: 300;
}

.banner ul li:not(:first-child):before {
    position: absolute;
    content: '';
    width: 10px;
    top: 5px;
    left: -25px;
    background: color #43d904;
    border-radius: 50px;
}



.circle {
    width: 470px;
    height: 470px;
    display: inline-block;
    border-radius: 50%;
    border: 1px solid #fff;
    position: absolute;
    top: -280px;
    left: 870px;
    animation: circles 60s linear 0s infinite;
}

@keyframes circles {
    to {
        transform: rotate(360deg);
    }
}

.icon {
    position: absolute;
    width: auto;
    height: auto;
    padding: 20px;
    border-radius: 50%;
    border: 1px solid #fff;
    background: color #292c45;
    transition: all ease 0.5s;
    animation: iconanimate 60s linear 0s infinite;
}

@keyframes iconanimate {
    to {
        transform: rotate(-360deg);
    }
}

.icon:hover {
    border-color: #3951e8;
    background-color: #3951e8;
    box-shadow: 0 4px 94px #384fde;
}

